@{
    ViewData["Title"] = "Вход в BurmaldaSHARE";
}

<div class="text-center">
    <h1>Вход()</h1>
    <p class="lead">С возвращением, гадина!</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label class="control-label">Логин</label>
                <input type="text" name="login" class="form-control" required placeholder="Ваш логин(наверняка тупорылый)" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Пароль</label>
                <input type="password" name="password" class="form-control" required placeholder="Ваш пароль(1234qwer)" />
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100">Войти</button>
            </div>
        </form>

        <div class="text-center">
            <p>Нет аккаунта? <a asp-controller="Account" asp-action="Register">Ебни новый!</a></p>
        </div>
    </div>
</div>
